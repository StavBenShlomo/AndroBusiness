<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Coins_Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Coins Calculator"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enter_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:text="Enter total price in ILS:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="25sp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <LinearLayout
            android:id="@+id/coins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/shekel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_coins_1shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coins of 1 Shekel:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/coins_1shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shekel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_coins_2shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coins of 2 Shekel:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/coins_2shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shekel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_coins_5shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coins of 5 Shekel:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/coins_5shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shekel10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_coins_10shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coins of 10 Shekel:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/coins_10shekel"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:typeface="monospace" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="35sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="1"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="2"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="3"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="4"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button5"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="5"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button6"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="6"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="7"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button8"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="8"
                android:textColor="#00BCD4"
                android:textSize="30sp"
          